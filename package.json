{
  "name": "electron-ts-demo",
  "version": "1.0.0",
  "description": "An Electron application written with Typescript",
  "scripts": {
    "build": "tsc && npm run copy",
    "watch": "tsc -w && npm run copy",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "npm run build && npm run copy && electron ./output/main.js",
    "dist": "electron-builder",
    "copy": "cp -r src/templates output"
  },
  "main": "output/main.js",
  "build": {
    "productName": "MyElectronMusicPlayer",
    "appId": "MyElectronMusicPlayer",
    "asar": true,
    "dmg": {
      "icon": "build/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ]
    },
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "Leo音乐播放器.exe",
      "publisherName": "HuQing"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    },
    "linux": {
      "category": "Chat;GNOME;GTK;Network;InstantMessaging",
      "packageCategory": "GNOME;GTK;Network;InstantMessaging",
      "description": "Zulip Desktop Client for Linux",
      "target": [
        "deb",
        "zip",
        "AppImage",
        "snap"
      ],
      "maintainer": "Leo <hqyx45@gmail.com>",
      "artifactName": "Leo音乐播放器"
    }
  },
  "keywords": [
    "Electron",
    "typescript"
  ],
  "author": "LegendLeo",
  "devDependencies": {
    "electron": "^9.4.0",
    "electron-builder": "^22.2.0",
    "tslint": "^5.19.0",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "electron-store": "^5.1.0",
    "uuid": "^3.3.3"
  }
}
